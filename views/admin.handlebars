  <style>
    .lista {
      list-style-type: none;
      background-color: #F4F7F8;
      display: none;
      cursor: pointer;
    }
    
    #listaa {
      /*list-style-type: none;
      padding: 10px;
      margin-top: 0px;
      display: none;
      */
      margin-top: -20px;
      margin-left: 25px;
    }
    
    legend {
      border-bottom: none;
    }
    
    ul#listt {
      max-height: 200px;
      overflow: hidden;
      overflow-y: auto;
    }
    
    input {
      margin-top: 10px;
    }
    
    button {
      margin-top: 10px;
    }
    
    #logout {
      float: right;
    }
    /*------------------------redondeado---------------------*/
    
    .circle {
      margin-left: auto;
      margin-right: auto;
      border-radius: 50%;
      width: 40%;
      position: relative;
    }
    
    .circle-border {
      border: 1px solid #31B404;
    }
    
    .circle-solid {
      background-color: whitesmoke;
    }
    
    .circle:before {
      content: "";
      display: block;
      padding-top: 100%;
    }
    
    .circle-inner {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      text-align: center;
    }
    
    .score-text {
      margin-top: 30%;
      line-height: 3vw;
      font-size: 15px;
      color: #31B404;
    }
  </style>
  <script>
    $(document).ready(function() {
      $("#boton1").click(function() {
        var usuario = $('#campousuario').val();
        $.get("/clientedatos/" + usuario, {
          user: usuario
        }, function(usuarioc) {
          $('#usuario').val(usuarioc.usuario);
          $('#email').val(usuarioc.email);
          $('#dispositivo').val(usuarioc.dispositivo);
        });
      });
      
    });
    /*
     $("#eliminar").click(function() {
        var usuariob = $("#usuario").val();
        alert(usuariob);
      $.get("/eliminar/"+usuario);
    });*/

    $.ajax({
      type: "GET",
      url: 'https://sol-anthonyprz.c9users.io/usercompletos',
      dataType: "json",
      success: function(data) {
        var arrayUsu = [];
        for (var i = 0; i < data.length; i++) {
          arrayUsu.push(data[i].usuario);
        }
        $("#campousuario").autocomplete({
          source: arrayUsu
        });
        $("#NumUsuarios").text(arrayUsu.length + " usuarios");


      },
      error: function(XMLHttpRequest, textStatus, errorThrown) {
        console.log("Status: " + textStatus);
        console.log("Error: " + errorThrown);
      }
    });

  </script>
</head>

